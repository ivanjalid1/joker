   }

   /* ========== DECORATIVE ELEMENTS ========== */
   
     .decorative-cofre {
    position: absolute;
    top: 52%;
    right: 8%;
    z-index: 1;
    opacity: 0.25;
    pointer-events: none;
    animation: intense-float 9s ease-in-out infinite;
  }

   .cofre-image {
     width: clamp(80px, 12vw, 150px);
