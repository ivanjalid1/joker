<script>
  // Funciones para el modal (futuras funcionalidades)
  function showAccountOptions() {
    const modal = document.getElementById('accountModal');
    if (modal) {
      modal.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    }
  }
  
  function closeModal() {
    const modal = document.getElementById('accountModal');
    if (modal) {
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  }
  
  // Cerrar modal con ESC
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeModal();
    }
  });
  
  // Cerrar modal al hacer clic fuera
  document.addEventListener('click', function(e) {
    const modal = document.getElementById('accountModal');
    if (modal && e.target === modal) {
      closeModal();
    }
  });
  
  // ========== ADVANCED ANIMATIONS & INTERACTIONS ==========
  
  // Mouse tracking for particle interaction
  let mouseX = 0;
  let mouseY = 0;
  
  document.addEventListener('mousemove', (e) => {
    mouseX = e.clientX;
    mouseY = e.clientY;
    
    // Add magnetic effect to buttons
    const buttons = document.querySelectorAll('.btn-primary, .btn-secondary');
    buttons.forEach((btn) => {
      const rect = btn.getBoundingClientRect();
      const btnCenterX = rect.left + rect.width / 2;
      const btnCenterY = rect.top + rect.height / 2;
      
      const distanceX = mouseX - btnCenterX;
      const distanceY = mouseY - btnCenterY;
      const distance = Math.sqrt(distanceX * distanceX + distanceY * distanceY);
      
      if (distance < 150) {
        const force = (150 - distance) / 150;
        const moveX = distanceX * force * 0.1;
        const moveY = distanceY * force * 0.1;
        
        (btn as HTMLElement).style.transform = `translate(${moveX}px, ${moveY}px)`;
      } else {
        (btn as HTMLElement).style.transform = 'translate(0, 0)';
      }
    });
  });

  // Enhanced particle interaction
  document.addEventListener('DOMContentLoaded', () => {
    const particles = document.querySelectorAll('.particle');
    
    particles.forEach((particle, index) => {
      // Random delay for more natural movement
      const delay = Math.random() * 2;
      (particle as HTMLElement).style.animationDelay = `${delay}s`;
      
      // Mouse proximity effect
      setInterval(() => {
        const rect = particle.getBoundingClientRect();
        const particleCenterX = rect.left + rect.width / 2;
        const particleCenterY = rect.top + rect.height / 2;
        
        const distanceX = mouseX - particleCenterX;
        const distanceY = mouseY - particleCenterY;
        const distance = Math.sqrt(distanceX * distanceX + distanceY * distanceY);
        
        if (distance < 100) {
          const intensity = (100 - distance) / 100;
          (particle as HTMLElement).style.filter = `blur(0px) brightness(${1 + intensity})`;
          (particle as HTMLElement).style.transform = `scale(${1 + intensity * 0.5})`;
        } else {
          (particle as HTMLElement).style.filter = 'blur(0.5px) brightness(1)';
          (particle as HTMLElement).style.transform = 'scale(1)';
        }
      }, 50);
    });
  });

  // Add click ripple effect
  document.addEventListener('click', (e) => {
    const ripple = document.createElement('div');
    ripple.className = 'click-ripple';
    ripple.style.cssText = `
      position: fixed;
      left: ${e.clientX - 10}px;
      top: ${e.clientY - 10}px;
      width: 20px;
      height: 20px;
      background: radial-gradient(circle, rgba(0, 255, 136, 0.6) 0%, transparent 70%);
      border-radius: 50%;
      pointer-events: none;
      z-index: 9999;
      animation: ripple-expand 0.6s ease-out forwards;
    `;
    
    document.body.appendChild(ripple);
    
    setTimeout(() => {
      ripple.remove();
    }, 600);
  });

  // Parallax effect for background elements
  window.addEventListener('scroll', () => {
    const scrolled = window.pageYOffset;
    const parallaxElements = document.querySelectorAll('.main-container::before, .main-container::after');
    
    parallaxElements.forEach((element, index) => {
      const speed = 0.5 + (index * 0.2);
      (element as HTMLElement).style.transform = `translateY(${scrolled * speed}px)`;
    });
  });

  // Dynamic CSS animation for ripple
  const style = document.createElement('style');
  style.textContent = `
    @keyframes ripple-expand {
      0% {
        transform: scale(1);
        opacity: 0.8;
      }
      100% {
        transform: scale(20);
        opacity: 0;
      }
    }
  `;
  document.head.appendChild(style);

     // Initialize Lucide Icons
   document.addEventListener('DOMContentLoaded', () => {
     if (typeof lucide !== 'undefined') {
       lucide.createIcons();
    }
  });

  // Activar animaciones cuando todo esté cargado
  window.addEventListener('load', () => {
    // Pequeño delay para asegurar que todo esté renderizado
    setTimeout(() => {
      document.body.classList.add('loaded');
      
      // Efectos adicionales post-carga
      initPostLoadAnimations();
      
      // Remover will-change después de las animaciones para optimizar rendimiento
      setTimeout(() => {
        const elementsWithWillChange = document.querySelectorAll('[style*="will-change"], .hero-title, .logo-container, .action-block');
        elementsWithWillChange.forEach(el => {
          (el as HTMLElement).style.willChange = 'auto';
        });
      }, 5000);
    }, 1000);
  });

  // Animaciones adicionales después de la carga
  function initPostLoadAnimations() {
    // Efectos de hover mejorados para toda la página
    setTimeout(() => {
      addAdvancedHoverEffects();
    }, 2000);

    // Efectos de cursor mágico
    setTimeout(() => {
      initMagicCursor();
    }, 3000);

    // Activar breathing en elementos después de carga
    setTimeout(() => {
      activateBreathingEffects();
    }, 4000);
  }

  // Efectos de hover avanzados
  function addAdvancedHoverEffects() {
    const decorativeElements = document.querySelectorAll('.decorative-cofre, .decorative-gambling');
    decorativeElements.forEach(element => {
      element.addEventListener('mouseenter', () => {
        (element as HTMLElement).style.transform = 'scale(1.15) rotate(5deg)';
        (element as HTMLElement).style.filter = 'brightness(1.3) saturate(1.2)';
      });
      
      element.addEventListener('mouseleave', () => {
        (element as HTMLElement).style.transform = 'scale(1) rotate(0deg)';
        (element as HTMLElement).style.filter = 'brightness(1) saturate(1)';
      });
    });

    // Efecto hover para el título principal
    const jokerText = document.querySelector('.joker-text');
    if (jokerText) {
      jokerText.addEventListener('mouseenter', () => {
        (jokerText as HTMLElement).style.animation += ', wave-text 0.8s ease-in-out 3';
      });
    }
  }

  // Cursor mágico que deja rastro de partículas
  function initMagicCursor() {
    let lastTrail = 0;
    
    document.addEventListener('mousemove', (e) => {
      const now = Date.now();
      
      // Crear efecto de rastro cada 100ms y solo cuando el mouse se mueve rápido
      if (now - lastTrail > 100 && Math.random() > 0.7) {
        createMagicTrail(e.clientX, e.clientY);
        lastTrail = now;
      }
    });
  }

  // Crear partícula de rastro mágico
  function createMagicTrail(x: number, y: number) {
    const trail = document.createElement('div');
    trail.style.position = 'fixed';
    trail.style.left = (x - 2) + 'px';
    trail.style.top = (y - 2) + 'px';
    trail.style.width = '4px';
    trail.style.height = '4px';
    trail.style.background = 'rgba(0, 255, 136, 0.4)';
    trail.style.borderRadius = '50%';
    trail.style.pointerEvents = 'none';
    trail.style.zIndex = '9999';
    trail.style.animation = 'sparkle 0.8s ease-out forwards';
    
    document.body.appendChild(trail);
    
    // Remover después de la animación
    setTimeout(() => {
      if (trail.parentNode) {
        trail.parentNode.removeChild(trail);
      }
    }, 800);
  }

  // Activar efectos de respiración (DESHABILITADO PARA 24H)
  function activateBreathingEffects() {
    // COMENTADO: const hours24 = document.querySelector('.hours-image');
    // COMENTADO: if (hours24) {
    // COMENTADO:   (hours24 as HTMLElement).style.animation += ', breathing-glow 8s ease-in-out infinite';
    // COMENTADO: }

    const particles = document.querySelectorAll('.particle');
    particles.forEach((particle, index) => {
      if (index % 4 === 0) {
        setTimeout(() => {
          (particle as HTMLElement).style.animation += ', magnetic-pulse 6s ease-in-out infinite';
        }, index * 500);
      }
      
      // Hacer que todas las partículas floten más intensamente
      if (index % 2 === 0) {
        setTimeout(() => {
          (particle as HTMLElement).style.animation += ', super-float 5s ease-in-out infinite';
        }, index * 300);
      }
    });
  }
  
  // Hacer funciones globales
  (window as any).showAccountOptions = showAccountOptions;
  (window as any).closeModal = closeModal;
</script>
