     animation: casino-atmosphere 40s ease-in-out infinite alternate;
     filter: blur(3px);
    pointer-events: none;
    z-index: 0;
  }
  
  /* Additional atmospheric layer */
  .main-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      /* Efectos de luz suaves sobre la imagen de fondo */
      linear-gradient(45deg, transparent 50%, rgba(0, 255, 136, 0.02) 50%, transparent 50%),
      linear-gradient(-45deg, transparent 48%, rgba(255, 215, 0, 0.01) 50%, transparent 52%);
    animation: elegant-light-sweep 80s linear infinite;
    pointer-events: none;
    z-index: 1;
    opacity: 0.4;
  }



  /* Floating particles */
  .main-container {
    position: relative;
  }

  .main-container .particle {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
    background: radial-gradient(circle, rgba(0, 255, 136, 1) 0%, rgba(0, 255, 136, 0.6) 30%, rgba(255, 255, 255, 0.1) 70%, transparent 100%);
    box-shadow: 
      0 0 15px rgba(0, 255, 136, 0.9),
      0 0 30px rgba(0, 255, 136, 0.6),
      0 0 45px rgba(0, 255, 136, 0.3),
      0 0 60px rgba(255, 255, 255, 0.1);
    animation-timing-function: ease-in-out;
    filter: blur(0.3px);
  }

  /* Partículas con efecto sparkle después de carga */
  .main-container .particle:nth-child(3),
  .main-container .particle:nth-child(7) {
    animation-delay: 4s;
  }

  .main-container .particle:nth-child(3)::after,
  .main-container .particle:nth-child(7)::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    animation: sparkle 2s ease-in-out infinite 5s;
  }

  .main-container .particle::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    right: -50%;
    bottom: -50%;
    background: radial-gradient(circle, rgba(0, 255, 136, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    animation: pulse-glow 3s ease-in-out infinite alternate;
  }

