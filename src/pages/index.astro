   }

   .decorative-ace {
     position: absolute;
     top: 120px;
     right: 15px;
    z-index: 0;
     opacity: 0.06;
     pointer-events: none;
     animation: 
       ace-sway 10s ease-in-out infinite,
       super-float 6s ease-in-out infinite;
   }

   .ace-icon {
     width: clamp(45px, 7vw, 90px);
     height: auto;
     filter: brightness(1.2) contrast(1.1);
     transition: all 0.3s ease;
   }

   /* Decorative animations */
   @keyframes gentle-float {
     0%, 100% {
       transform: translateY(0px) rotate(0deg);
       opacity: 0.15;
     }
     25% {
       transform: translateY(-8px) rotate(1deg);
       opacity: 0.2;
     }
     50% {
       transform: translateY(-12px) rotate(0deg);
       opacity: 0.25;
     }
     75% {
       transform: translateY(-6px) rotate(-1deg);
       opacity: 0.2;
     }
   }

   @keyframes gentle-rotate {
     0%, 100% {
       transform: translateY(-50%) rotate(0deg) scale(1);
       opacity: 0.12;
     }
     25% {
       transform: translateY(-48%) rotate(2deg) scale(1.02);
       opacity: 0.18;
     }
     50% {
       transform: translateY(-52%) rotate(0deg) scale(1.05);
       opacity: 0.2;
     }
     75% {
       transform: translateY(-48%) rotate(-2deg) scale(1.02);
       opacity: 0.15;
     }
   }

   @keyframes chips-spin {
     0% {
       transform: rotate(0deg) scale(1);
       opacity: 0.1;
     }
     25% {
       transform: rotate(90deg) scale(1.1);
       opacity: 0.15;
     }
     50% {
       transform: rotate(180deg) scale(1);
       opacity: 0.12;
     }
     75% {
       transform: rotate(270deg) scale(0.9);
       opacity: 0.08;
     }
     100% {
       transform: rotate(360deg) scale(1);
       opacity: 0.1;
     }
   }

   @keyframes ace-sway {
     0%, 100% {
       transform: translateX(0px) rotate(0deg);
       opacity: 0.08;
     }
     25% {
       transform: translateX(10px) rotate(3deg);
       opacity: 0.12;
     }
     50% {
       transform: translateX(0px) rotate(0deg);
       opacity: 0.15;
     }
     75% {
       transform: translateX(-8px) rotate(-2deg);
       opacity: 0.1;
     }
  }
  
