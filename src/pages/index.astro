    animation-delay: 4s;
  }

  .main-container .particle:nth-child(4) {
    left: 60%;
    width: 2.5px;
    height: 2.5px;
    animation: float-down 10s ease-in-out infinite;
    animation-delay: 1s;
  }

  .main-container .particle:nth-child(5) {
    left: 75%;
    width: 3px;
    height: 3px;
    animation: float-up 13s ease-in-out infinite;
    animation-delay: 6s;
  }

  .main-container .particle:nth-child(6) {
    left: 85%;
