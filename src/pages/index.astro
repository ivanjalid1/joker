   }

     .decorative-gambling {
    position: absolute;
    top: 52%;
    right: 8%;
    z-index: 1;
    opacity: 0.25;
    pointer-events: none;
    animation: super-float 7s ease-in-out infinite;
 }

   .gambling-icon {
     width: clamp(80px, 12vw, 150px);
     height: auto;
     filter: brightness(1.2) saturate(0.8);
     transition: all 0.3s ease;
  }

   .decorative-chips {
     position: absolute;
     top: 140px;
     left: 15px;
    z-index: 0;
     opacity: 0.08;
     pointer-events: none;
     animation: 
       chips-spin 15s linear infinite,
       floating-dance 8s ease-in-out infinite;
   }

   .chips-icon {
     width: clamp(50px, 8vw, 100px);
     height: auto;
     filter: brightness(1.3) saturate(0.7) hue-rotate(-5deg);
