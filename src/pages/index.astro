---
import Layout from '../layouts/Layout.astro';

// Configuración de números de WhatsApp - Fácil actualización
const WHATSAPP_NUMBERS = {
  ADQUISICION: '1234567890', // Reemplazar con el número real
  SOPORTE: '1234567891'      // Reemplazar con el número real
};

// URLs de WhatsApp
const whatsappUrls = {
  nuevoUsuario: `https://wa.me/${WHATSAPP_NUMBERS.ADQUISICION}?text=Hola!%20Quiero%20crear%20mi%20usuario.`,
  yaTengoCuenta: `https://wa.me/${WHATSAPP_NUMBERS.SOPORTE}?text=Hola!%20Ya%20tengo%20cuenta%20y%20necesito%20ayuda.`
};
---

<Layout title="Joker Casino - Tu Acceso Oficial" description="Contacta con Joker Casino de forma segura. Crea tu usuario o accede a tu cuenta existente. Casino online legal y confiable.">
  <main class="main-container">
    <!-- Decorative Elements -->
    <div class="decorative-cofre">
      <img src="/images/cofre.webp" alt="" class="cofre-image" />
    </div>
    
    <div class="decorative-gambling">
      <img src="/images/gambling.svg" alt="" class="gambling-icon" />
    </div>



    <!-- Professional floating particles -->
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    
    <!-- Header con Logo -->
    <header class="header">
      <div class="container">
        <div class="logo-container fade-in-up">
          <img 
            src="/images/LOGO VERDE.png" 
            alt="Logo Joker Casino" 
            class="logo"
            loading="eager"
          />
        </div>
      </div>
    </header>

    <!-- Contenido Principal -->
    <section class="hero-section">
      <div class="container">
        <!-- Título Principal -->
        <h1 class="hero-title">
          <span class="joker-text">¡Bienvenido a Joker!</span><br/>
          <span class="highlight" style="white-space: nowrap;">Tu Acceso Oficial</span>
        </h1>
        
        <!-- Subtítulo -->
                  <h2 class="hero-subtitle fade-in-up">
            Elige una opción para contactarnos
          </h2>
        
        <!-- Bloque de Acciones -->
        <div class="action-block fade-in-up">
          <!-- Botón 1: Nuevo Usuario -->
          <div class="action-item mb-4">
          
            <a 
              href={whatsappUrls.nuevoUsuario}
              class="btn btn-primary"
              aria-label="Crear nuevo usuario en Joker Casino"
              target="_blank"
              rel="noopener noreferrer"
            >
                             <i data-lucide="user-plus" class="btn-icon"></i>
              QUIERO CREAR USUARIO
            </a>
          </div>
          
          <!-- Botón 2: Ya Tengo Cuenta -->
          <div class="action-item">
            <a 
              href={whatsappUrls.yaTengoCuenta}
              class="btn btn-secondary"
              aria-label="Contactar para usuarios existentes"
              target="_blank"
              rel="noopener noreferrer"
            >
                             <i data-lucide="log-in" class="btn-icon"></i>
              YA TENGO CUENTA
            </a>
          </div>
          
          <!-- Imagen 24hs Abierto -->
          <div class="hours-badge">
            <img src="/images/24hsAbierto.png" alt="24 Horas Abierto" class="hours-image" />
          </div>
        </div>



      </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <p class="footer-text">
            © 2025 Joker | Juego Responsable
          </p>
        </div>
      </div>
    </footer>
  </main>
</Layout>

<style>
  /* ========== LAYOUT PRINCIPAL RESPONSIVE ========== */
  .main-container {
    display: grid;
    grid-template-rows: auto 1fr auto;
    min-height: 100vh;
    min-height: 100dvh; /* Dynamic viewport para móviles */
    position: relative;
    overflow: hidden;
    padding: clamp(0.5rem, 2vw, 1rem);
  }

  /* Layout de hero completo para pantallas grandes */
  @media (min-width: 1024px) {
    .main-container {
      height: 100vh;
      overflow: hidden;
    }
  }

  /* ========== FONDO RESPONSIVE ========== */
  .main-container::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
       /* Imagen de fondo adaptativa */
       url('/images/FONDO.jpg') center center/cover no-repeat,
       /* Overlay responsivo */
       linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(13, 26, 13, 0.3) 50%, rgba(0, 0, 0, 0.5) 100%),
       /* Respaldo */
       linear-gradient(135deg, #000000 0%, #0d1a0d 25%, #1a3d1a 50%, #0d1a0d 75%, #000000 100%);
    filter: blur(clamp(1px, 0.5vw, 3px));
    animation: casino-atmosphere 40s ease-in-out infinite alternate;
    pointer-events: none;
    z-index: 0;
  }

  /* Fondo mejorado para pantallas grandes */
  @media (min-width: 1440px) {
    .main-container::before {
      filter: blur(2px);
      background-size: cover;
      background-position: center 20%;
    }
    
    .main-container::after {
      opacity: 0.6;
    }
  }

  @media (min-width: 1920px) {
    .main-container::before {
      filter: blur(1.5px);
      background: 
        url('/images/FONDO.jpg') center 15%/cover no-repeat,
        linear-gradient(135deg, rgba(0, 0, 0, 0.35) 0%, rgba(13, 26, 13, 0.25) 50%, rgba(0, 0, 0, 0.45) 100%),
        linear-gradient(135deg, #000000 0%, #0d1a0d 25%, #1a3d1a 50%, #0d1a0d 75%, #000000 100%);
    }
    
    .main-container::after {
      opacity: 0.7;
    }
  }

  @media (min-width: 2560px) {
    .main-container::before {
      filter: blur(1px);
      background: 
        url('/images/FONDO.jpg') center 10%/cover no-repeat,
        linear-gradient(135deg, rgba(0, 0, 0, 0.3) 0%, rgba(13, 26, 13, 0.2) 50%, rgba(0, 0, 0, 0.4) 100%),
        radial-gradient(ellipse at 30% 20%, rgba(0, 255, 136, 0.05) 0%, transparent 50%),
        radial-gradient(ellipse at 70% 80%, rgba(255, 215, 0, 0.03) 0%, transparent 50%),
        linear-gradient(135deg, #000000 0%, #0d1a0d 25%, #1a3d1a 50%, #0d1a0d 75%, #000000 100%);
    }
    
    .main-container::after {
      opacity: 0.8;
      background: 
        linear-gradient(45deg, transparent 50%, rgba(0, 255, 136, 0.03) 50%, transparent 50%),
        linear-gradient(-45deg, transparent 48%, rgba(255, 215, 0, 0.015) 50%, transparent 52%),
        radial-gradient(circle at 25% 75%, rgba(0, 255, 136, 0.02) 0%, transparent 50%);
    }
  }

  /* Capa adicional de efectos */
  .main-container::after {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      linear-gradient(45deg, transparent 50%, rgba(0, 255, 136, 0.02) 50%, transparent 50%),
      linear-gradient(-45deg, transparent 48%, rgba(255, 215, 0, 0.01) 50%, transparent 52%);
    animation: elegant-light-sweep 80s linear infinite;
    pointer-events: none;
    z-index: 1;
    opacity: clamp(0.2, 0.8vw, 0.4);
  }

  /* ========== PARTÍCULAS RESPONSIVAS ========== */
  .particle {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
    background: radial-gradient(circle, rgba(0, 255, 136, 1) 0%, rgba(0, 255, 136, 0.6) 30%, rgba(255, 255, 255, 0.1) 70%, transparent 100%);
    box-shadow: 
      0 0 clamp(0.5rem, 2vw, 1rem) rgba(0, 255, 136, 0.9),
      0 0 clamp(1rem, 3vw, 2rem) rgba(0, 255, 136, 0.6),
      0 0 clamp(1.5rem, 4vw, 3rem) rgba(0, 255, 136, 0.3);
    animation-timing-function: ease-in-out;
    filter: blur(clamp(0.1px, 0.2vw, 0.3px));
    width: clamp(2px, 1vw, 8px);
    height: clamp(2px, 1vw, 8px);
  }

  /* Partículas mejoradas para pantallas grandes */
  @media (min-width: 1024px) {
    .particle {
      width: clamp(6px, 0.7vw, 14px);
      height: clamp(6px, 0.7vw, 14px);
      box-shadow: 
        0 0 clamp(1.5rem, 2vw, 2.5rem) rgba(0, 255, 136, 0.9),
        0 0 clamp(2.5rem, 3vw, 3.5rem) rgba(0, 255, 136, 0.6),
        0 0 clamp(3.5rem, 4vw, 4.5rem) rgba(0, 255, 136, 0.3);
    }
  }

  @media (min-width: 1440px) {
    .particle {
      width: clamp(8px, 0.6vw, 16px);
      height: clamp(8px, 0.6vw, 16px);
      box-shadow: 
        0 0 clamp(2rem, 2vw, 3rem) rgba(0, 255, 136, 0.9),
        0 0 clamp(3rem, 3vw, 4rem) rgba(0, 255, 136, 0.6),
        0 0 clamp(4rem, 4vw, 5rem) rgba(0, 255, 136, 0.3);
    }
  }

  @media (min-width: 2560px) {
    .particle {
      width: 16px;
      height: 16px;
      box-shadow: 
        0 0 2.5rem rgba(0, 255, 136, 0.9),
        0 0 4rem rgba(0, 255, 136, 0.6),
        0 0 5rem rgba(0, 255, 136, 0.3);
    }
  }

  /* Partículas individuales con posiciones responsive */
  .particle:nth-child(1) { left: 10%; animation: float-up clamp(8s, 12s, 16s) ease-in-out infinite; }
  .particle:nth-child(2) { left: 25%; animation: float-down clamp(6s, 10s, 14s) ease-in-out infinite; animation-delay: 2s; }
  .particle:nth-child(3) { left: 40%; animation: float-up clamp(10s, 15s, 20s) ease-in-out infinite; animation-delay: 4s; }
  .particle:nth-child(4) { left: 60%; animation: float-down clamp(7s, 12s, 17s) ease-in-out infinite; animation-delay: 1s; }
  .particle:nth-child(5) { left: 75%; animation: float-up clamp(9s, 13s, 18s) ease-in-out infinite; animation-delay: 6s; }
  .particle:nth-child(6) { left: 85%; animation: float-down clamp(8s, 11s, 15s) ease-in-out infinite; animation-delay: 3s; }
  .particle:nth-child(7) { left: 15%; animation: float-up clamp(11s, 14s, 19s) ease-in-out infinite; animation-delay: 7s; }
  .particle:nth-child(8) { left: 35%; animation: float-down clamp(9s, 13s, 16s) ease-in-out infinite; animation-delay: 5s; }
  .particle:nth-child(9) { left: 55%; animation: float-up clamp(12s, 16s, 21s) ease-in-out infinite; animation-delay: 8s; }
  .particle:nth-child(10) { left: 90%; animation: float-down clamp(10s, 14s, 18s) ease-in-out infinite; animation-delay: 4s; }

  /* ========== ELEMENTOS DECORATIVOS RESPONSIVOS ========== */
  .decorative-cofre {
    position: absolute;
    top: clamp(45%, 52%, 60%);
    right: clamp(2%, 8%, 12%);
    z-index: 1;
    opacity: clamp(0.15, 0.25, 0.35);
    pointer-events: none;
    animation: intense-float 9s ease-in-out infinite;
  }

  .cofre-image {
    width: clamp(60px, 12vw, 180px);
    height: auto;
    filter: brightness(1.2) saturate(0.8);
    transition: all 0.3s ease;
  }

  .decorative-gambling {
    position: absolute;
    top: clamp(45%, 52%, 60%);
    left: clamp(2%, 8%, 12%);
    z-index: 1;
    opacity: clamp(0.12, 0.22, 0.32);
    pointer-events: none;
    animation: super-float 7s ease-in-out infinite;
  }

  .gambling-icon {
    width: clamp(60px, 12vw, 180px);
    height: auto;
    filter: brightness(1.2) saturate(0.8);
    transition: all 0.3s ease;
  }

  /* ========== HEADER RESPONSIVE ========== */
  .header {
    padding: clamp(0.25rem, 1vw, 0.75rem) 0;
    position: relative;
    z-index: 10;
  }
  
  .logo-container {
    text-align: center;
    margin-bottom: clamp(-1rem, -1.5vw, -0.5rem);
    will-change: transform, opacity, filter;
  }
  
  .logo {
    width: auto;
    height: clamp(80px, 15vw + 2rem, 300px);
    max-width: min(90vw, 400px);
    filter: 
        drop-shadow(0 0 clamp(1rem, 3vw, 2rem) rgba(0, 255, 136, 0.9))
        drop-shadow(0 0 clamp(2rem, 5vw, 4rem) rgba(0, 255, 136, 0.6))
        drop-shadow(0 clamp(0.25rem, 1vw, 0.5rem) clamp(1rem, 3vw, 2rem) rgba(0, 0, 0, 0.8))
        drop-shadow(0 0 clamp(3rem, 7vw, 5rem) rgba(255, 255, 255, 0.2));
    transition: all 0.5s ease;
    animation: breathing-glow 4s ease-in-out infinite;
  }

  /* ========== HERO SECTION RESPONSIVE ========== */
  .hero-section {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    position: relative;
    z-index: 10;
    padding: clamp(1rem, 2vw, 2rem) 0;
    text-align: center;
    gap: clamp(0.75rem, 2vw, 1.5rem);
    margin-top: clamp(0rem, 0vw, 0rem);
  }

  /* Hero centrado para pantallas grandes */
  @media (min-width: 1024px) {
    .hero-section {
      justify-content: center;
    }
  }
  
  .hero-title {
    margin-bottom: clamp(0.75rem, 2vw, 1.5rem);
    margin-top: clamp(0rem, 0vw, 0rem);
    position: relative;
    color: #ffffff;
    text-shadow: 
      0 0 clamp(0.5rem, 2vw, 1rem) rgba(255, 255, 255, 0.6),
      0 clamp(0.125rem, 0.5vw, 0.25rem) clamp(0.5rem, 2vw, 1rem) rgba(0, 0, 0, 1),
      0 clamp(0.25rem, 1vw, 0.5rem) clamp(1rem, 3vw, 1.5rem) rgba(0, 0, 0, 0.8);
    will-change: transform, opacity, filter;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .hero-title .highlight {
    color: #00ff88;
    font-weight: 800;
    display: inline-block;
    text-shadow: 
      0 clamp(0.125rem, 0.5vw, 0.25rem) clamp(0.5rem, 2vw, 1rem) rgba(0, 0, 0, 0.9),
      0 clamp(0.25rem, 1vw, 0.5rem) clamp(0.75rem, 2.5vw, 1.25rem) rgba(0, 0, 0, 0.7);
  }
  
  .hero-subtitle {
    margin-bottom: clamp(1rem, 3vw, 2rem);
    max-width: min(90vw, 600px);
    margin-left: auto;
    margin-right: auto;
    color: #ffffff;
    text-shadow: 
      0 clamp(0.125rem, 0.5vw, 0.25rem) clamp(0.5rem, 2vw, 1rem) rgba(0, 0, 0, 0.9),
      0 0 clamp(0.75rem, 2vw, 1rem) rgba(0, 0, 0, 0.7),
      0 clamp(0.25rem, 1vw, 0.5rem) clamp(0.75rem, 2.5vw, 1.25rem) rgba(0, 0, 0, 0.6);
    white-space: nowrap;
    overflow: visible;
    font-size: clamp(0.875rem, 3vw + 0.25rem, 1.375rem) !important;
  }

  /* ========== BOTONES ESPECÍFICOS RESPONSIVE ========== */
  .action-block {
    width: 100%;
    max-width: min(90vw, 450px);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: clamp(0.75rem, 2vw, 1.5rem);
  }
  
  .action-item {
    width: 100%;
    
    
  }

  /* Botón primario (rojo) */
  .btn-primary {
    background: linear-gradient(135deg, #dc2626 0%, #b91c1c 50%, #dc2626 100%);
    background-size: 200% 200%;
    color: #ffffff;
    text-shadow: 
      0 0 clamp(0.25rem, 1vw, 0.5rem) rgba(255, 255, 255, 0.4),
      0 clamp(0.125rem, 0.5vw, 0.25rem) clamp(0.375rem, 1.5vw, 0.75rem) rgba(0, 0, 0, 0.9);
    box-shadow: 
      0 0 clamp(0.5rem, 2vw, 1rem) rgba(220, 38, 38, 0.15),
      0 clamp(0.5rem, 2vw, 1rem) clamp(1.5rem, 4vw, 2rem) rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    border: clamp(1px, 0.2vw, 3px) solid #ef4444;
    animation: 
      button-red-glow 3s ease-in-out infinite,
      magnetic-pulse-red 6s ease-in-out infinite 3s;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 50%, #f87171 100%);
    transform: translateY(clamp(-2px, -0.5vw, -4px)) scale(1.02);
    box-shadow: 
      0 0 clamp(0.75rem, 3vw, 1.5rem) rgba(239, 68, 68, 0.2),
      0 0 clamp(1.5rem, 4vw, 2rem) rgba(220, 38, 38, 0.12),
      0 clamp(0.75rem, 3vw, 1.5rem) clamp(2rem, 5vw, 2.5rem) rgba(0, 0, 0, 0.6);
  }

  /* Botón secundario */
  .btn-secondary {
    background: linear-gradient(135deg, rgba(17, 15, 15, 0.85) 0%, rgba(0, 0, 0, 0.75) 100%);
    color: #ffffff;
    text-shadow: 
      0 0 clamp(0.5rem, 2vw, 1rem) rgba(255, 255, 255, 0.8),
      0 clamp(0.125rem, 0.5vw, 0.25rem) clamp(0.5rem, 2vw, 1rem) rgba(0, 0, 0, 1);
    border: clamp(2px, 0.3vw, 3px) solid rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(clamp(0.5rem, 2vw, 1rem));
    box-shadow: 
      0 0 clamp(1rem, 3vw, 1.5rem) rgba(0, 0, 0, 0.8),
      0 clamp(0.5rem, 2vw, 1rem) clamp(1.5rem, 4vw, 2rem) rgba(0, 0, 0, 0.7),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .btn-secondary:hover {
    background: rgba(0, 0, 0, 0.9);
    border-color: rgba(255, 255, 255, 1);
    transform: translateY(clamp(-1px, -0.3vw, -2px));
    box-shadow: 
      0 clamp(0.5rem, 2vw, 1rem) clamp(1.5rem, 4vw, 2rem) rgba(0, 0, 0, 0.8),
      0 0 clamp(1.5rem, 4vw, 2rem) rgba(255, 255, 255, 0.3);
  }

  .btn-ghost {
    background: transparent;
    color: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(clamp(0.25rem, 1vw, 0.5rem));
  }

  .btn-ghost:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.3);
    color: #ffffff;
    transform: translateY(clamp(-1px, -0.2vw, -2px));
  }

  /* ========== IMAGEN 24 HORAS RESPONSIVE ========== */
  .hours-badge {
    display: flex;
    justify-content: center;
    margin-top: clamp(2rem, 4vw, 3rem);
    background: transparent;
    border: none;
  }

  .hours-image {
    width: clamp(140px, 22vw + 2rem, 280px);
    height: auto;
    opacity: 1;
    filter: 
      drop-shadow(0 clamp(0.25rem, 1vw, 0.5rem) clamp(0.5rem, 1.5vw, 1rem) rgba(0, 0, 0, 0.8))
      drop-shadow(0 0 clamp(0.5rem, 1.5vw, 1rem) rgba(0, 255, 136, 0.3))
      brightness(1.15)
      saturate(1.2)
      contrast(1.15);
    border-radius: clamp(0.25rem, 1vw, 0.5rem);
    animation: gentle-pulse 3s ease-in-out infinite;
    transition: all 0.3s ease;
    image-rendering: -webkit-optimize-contrast;
    image-rendering: high-quality;
    -ms-interpolation-mode: bicubic;
    backface-visibility: hidden;
    transform: translateZ(0);
    will-change: transform;
  }

  .hours-image:hover {
    filter: 
      drop-shadow(0 clamp(0.375rem, 1.5vw, 1rem) clamp(1rem, 3vw, 2rem) rgba(0, 0, 0, 0.9))
      drop-shadow(0 0 clamp(1.5rem, 4vw, 2.5rem) rgba(0, 255, 136, 0.4))
      brightness(1.25)
      saturate(1.3)
      contrast(1.2);
    transform: scale(1.05);
    animation-play-state: paused;
  }



  /* ========== FOOTER RESPONSIVE ========== */
  .footer {
    position: relative;
    padding: clamp(1rem, 3vw, 2rem) 0 clamp(1.5rem, 4vw, 2.5rem) 0;
    z-index: 10;
    margin-top: auto;
  }

  /* Footer oculto para hero completo en pantallas grandes */
  @media (min-width: 1024px) {
    .footer {
      display: none; /* Oculto para experiencia de hero limpia */
    }
  }
  
  .footer-content {
    text-align: center;
  }
  
  .footer-text {
    font-size: clamp(0.75rem, 2vw, 1rem);
    font-weight: 700;
    color: #ffffff !important;
    margin: 0;
    letter-spacing: 0.02em;
    text-shadow: 
      0 0 clamp(1rem, 3vw, 2rem) rgba(255, 255, 255, 1),
      0 clamp(0.125rem, 0.5vw, 0.25rem) clamp(0.75rem, 2vw, 1rem) rgba(0, 0, 0, 1);
    background: rgba(0, 0, 0, 0.9);
    padding: clamp(0.5rem, 2vw, 1rem) clamp(1rem, 3vw, 1.5rem);
    border-radius: clamp(0.5rem, 2vw, 1rem);
    backdrop-filter: blur(clamp(0.75rem, 2vw, 1rem));
    border: clamp(1px, 0.2vw, 2px) solid rgba(255, 255, 255, 0.6);
    box-shadow: 
      0 0 clamp(1rem, 3vw, 2rem) rgba(0, 0, 0, 0.8),
      0 clamp(0.5rem, 2vw, 1rem) clamp(1rem, 3vw, 1.5rem) rgba(0, 0, 0, 0.6);
    display: inline-block;
    }

  /* ========== BREAKPOINTS ESPECÍFICOS ========== */
  
     /* Ultra pequeño: hasta 320px */
   @media (max-width: 320px) {
     .main-container {
       padding: 0.25rem;
     }
     
     .hero-section {
       gap: 1rem;
       margin-top: clamp(0rem, 0vw, 0rem);
       padding: 1rem 0;
     }
     
     .action-block {
       gap: 0.5rem;
     }
     
     .hero-subtitle {
       white-space: normal;
       max-width: 100%;
       font-size: clamp(0.75rem, 4vw, 1rem) !important;
       margin-bottom: clamp(0.75rem, 2vw, 1rem);
     }
     
           .hours-badge {
        margin-top: 1.5rem;
      }
     
         .main-container {
      padding-bottom: 1rem;
    }
   }

     /* Móviles pequeños: 321px - 479px */
   @media (min-width: 321px) and (max-width: 479px) {
     .decorative-cofre,
     .decorative-gambling {
       opacity: 0.15;
     }
     
      .hero-section {
        margin-top: clamp(1rem, 0vw, 0rem);
      }

      .hero-title {
