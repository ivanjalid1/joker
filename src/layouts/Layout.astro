---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Joker Casino - Tu acceso oficial al mejor casino online legal" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Joker Casino" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Joker Casino" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    
    <!-- Preconnect for better performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Montserrat - Preload para evitar FOUC -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet"></noscript>
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    
    <title>{title}</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/simbolo-2.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/images/simbolo-2.png" />
    <link rel="apple-touch-icon" href="/images/simbolo-2.png" />
    
    <!-- Mobile optimizations -->
    <meta name="theme-color" content="#000000" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
</head>
<body>
    <slot />
</body>
</html>

<style is:global>
    /* ========== RESPONSIVE RESET & BASE ========== */
    /* CSS Reset optimizado para responsive */
    *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
    
    html {
        font-size: 16px; /* Base para rem calculations */
        height: 100%;
        overflow-x: hidden;
    }
    
    @media (max-width: 320px) {
        html { font-size: 14px; }
    }
    
    @media (min-width: 1920px) {
        html { font-size: 18px; }
    }
    
    body {
        height: 100%;
        min-height: 100vh;
        min-height: 100dvh; /* Dynamic viewport height para móviles */
        overflow-x: hidden;
        line-height: 1.5;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        font-family: "Montserrat", -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif;
        background: 
            radial-gradient(ellipse at top, rgba(0, 255, 136, 0.1) 0%, transparent 50%),
            linear-gradient(135deg, #0a0a0a 0%, #0f1f0f 50%, #000000 100%);
        background-size: 100% 100%, 100% 100%;
        background-attachment: fixed;
        color: #ffffff;
        touch-action: manipulation;
    }
    
    /* ========== TIPOGRAFÍA RESPONSIVE ========== */
    /* Sistema tipográfico escalable */
    h1, h2, h3, h4, h5, h6 {
        font-family: "Montserrat", -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif;
        font-weight: 700;
        line-height: 1.2;
        color: #00FF88;
        text-align: center;
        letter-spacing: 0.02em;
        margin: 0;
    }
    
    h1 {
        font-size: clamp(1.75rem, 8vw + 1rem, 5rem);
        font-weight: 900;
        line-height: 1.1;
        text-shadow: 
            0 2px 4px rgba(0, 0, 0, 0.8),
            0 0 8px rgba(0, 255, 136, 0.6);
    }
    
    h2 {
        font-size: clamp(1.125rem, 4vw + 0.5rem, 2.5rem);
        font-weight: 600;
        color: #ffffff;
        letter-spacing: 0.01em;
        line-height: 1.3;
    }
    
    p {
        font-size: clamp(0.875rem, 2.5vw + 0.25rem, 1.25rem);
        color: #f0f0f0;
        text-align: center;
        line-height: 1.6;
        font-weight: 400;
        margin: 0;
    }
    
    /* ========== SISTEMA DE LAYOUT RESPONSIVE ========== */
    /* Container flexible que se adapta a todas las pantallas */
    .container {
        width: 100%;
        max-width: min(90vw, 1400px);
        margin: 0 auto;
        padding-inline: clamp(1rem, 4vw, 2rem);
        position: relative;
    }
    
    /* ========== COMPONENTES RESPONSIVOS ========== */
    /* Botones completamente adaptativos */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        min-height: clamp(3.5rem, 12vw, 4.5rem);
        max-width: 100%;
        padding: clamp(0.875rem, 3vw, 1.5rem) clamp(1.5rem, 4vw, 2.5rem);
        font-size: clamp(0.875rem, 3.5vw + 0.25rem, 1.375rem);
        font-weight: 700;
        text-decoration: none;
        border-radius: clamp(0.5rem, 2vw, 1rem);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        border: none;
        text-align: center;
        position: relative;
        box-shadow: 0 0.25rem 1rem rgba(0, 0, 0, 0.25);
        -webkit-tap-highlight-color: transparent;
        letter-spacing: 0.02em;
        text-transform: uppercase;
        gap: clamp(0.5rem, 2vw, 1rem);
    }
    
    .btn:active {
        transform: translateY(2px);
    }
    
    .btn-icon {
        width: clamp(1.25rem, 4vw, 1.75rem);
        height: clamp(1.25rem, 4vw, 1.75rem);
        stroke-width: 2.5;
        flex-shrink: 0;
    }
    
    /* ========== UTILIDADES RESPONSIVE ========== */
    .text-center { text-align: center; }
    
    /* Sistema de espaciado adaptativo */
    .mb-1 { margin-bottom: clamp(0.25rem, 1vw, 0.5rem); }
    .mb-2 { margin-bottom: clamp(0.5rem, 2vw, 1rem); }
    .mb-3 { margin-bottom: clamp(0.75rem, 3vw, 1.5rem); }
    .mb-4 { margin-bottom: clamp(1rem, 4vw, 2rem); }
    .mt-1 { margin-top: clamp(0.25rem, 1vw, 0.5rem); }
    .mt-2 { margin-top: clamp(0.5rem, 2vw, 1rem); }
    .mt-3 { margin-top: clamp(0.75rem, 3vw, 1.5rem); }
    .mt-4 { margin-top: clamp(1rem, 4vw, 2rem); }
    
    /* ========== ANIMACIONES ========== */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(2rem);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .fade-in-up {
        animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }
    
    /* ========== BREAKPOINTS RESPONSIVOS ========== */
    
    /* Extra Small: 320px - 479px (móviles pequeños) */
    @media (max-width: 479px) {
        .container {
            max-width: 100%;
            padding-inline: clamp(0.75rem, 3vw, 1.25rem);
        }
        
        h1 {
            font-size: clamp(1.5rem, 9vw, 2.25rem);
            line-height: 1.1;
        }
        
        h2 {
            font-size: clamp(1rem, 5vw, 1.375rem);
            margin-bottom: clamp(1rem, 4vw, 1.5rem);
        }
        
        .btn {
            min-height: clamp(3rem, 14vw, 3.75rem);
            font-size: clamp(0.75rem, 4vw, 1rem);
            padding: clamp(0.75rem, 3vw, 1.125rem) clamp(1.25rem, 4vw, 1.75rem);
        }
    }
    
    /* Small: 480px - 767px (móviles grandes) */
    @media (min-width: 480px) and (max-width: 767px) {
        .container {
            max-width: min(95vw, 600px);
        }
        
        h1 {
            font-size: clamp(2rem, 7vw, 3rem);
        }
        
        h2 {
            font-size: clamp(1.25rem, 4vw, 1.75rem);
        }
        
        .btn {
            min-height: clamp(3.5rem, 10vw, 4rem);
            font-size: clamp(1rem, 3vw, 1.25rem);
        }
    }
    
    /* Medium: 768px - 1023px (tablets) */
    @media (min-width: 768px) and (max-width: 1023px) {
        .container {
            max-width: min(85vw, 800px);
            padding-inline: clamp(1.5rem, 3vw, 2rem);
        }
        
        h1 {
            font-size: clamp(2.5rem, 6vw, 3.75rem);
        }
        
        h2 {
            font-size: clamp(1.5rem, 3vw, 2.25rem);
        }
        
        .btn {
            min-height: clamp(3.75rem, 8vw, 4.25rem);
            font-size: clamp(1.125rem, 2.5vw, 1.375rem);
            max-width: min(400px, 90%);
        }
    }
    
    /* Large: 1024px - 1439px (desktop pequeño) */
    @media (min-width: 1024px) and (max-width: 1439px) {
        .container {
            max-width: min(80vw, 1000px);
            padding-inline: 2rem;
        }
        
        h1 {
            font-size: clamp(3rem, 5vw, 4.5rem);
        }
        
        h2 {
            font-size: clamp(1.75rem, 2.5vw, 2.5rem);
        }
        
        .btn {
            min-height: 4rem;
            font-size: clamp(1.25rem, 2vw, 1.375rem);
            max-width: 400px;
        }
    }
    
    /* Extra Large: 1440px - 1919px (desktop grande) */
    @media (min-width: 1440px) and (max-width: 1919px) {
        .container {
            max-width: 1200px;
            padding-inline: 3rem;
        }
        
        h1 {
            font-size: clamp(4rem, 4vw, 5.5rem);
        }
        
        h2 {
            font-size: clamp(2rem, 2vw, 2.5rem);
        }
        
        .btn {
            min-height: 5rem;
            font-size: 1.375rem;
            max-width: 500px;
        }
    }

    /* Ultra Large: 1920px - 2559px */
    @media (min-width: 1920px) and (max-width: 2559px) {
        .container {
            max-width: 1400px;
            padding-inline: 4rem;
        }
        
        h1 {
            font-size: clamp(5rem, 3.5vw, 6.5rem);
        }
        
        h2 {
            font-size: clamp(2.25rem, 1.5vw, 2.75rem);
        }
        
        .btn {
            min-height: 5.5rem;
            font-size: 1.5rem;
            max-width: 600px;
        }
    }

    /* 4K y Ultra Wide: 2560px+ */
    @media (min-width: 2560px) {
        .container {
            max-width: 1800px;
            padding-inline: 5rem;
        }
        
        h1 {
            font-size: 7rem;
        }
        
        h2 {
            font-size: 3rem;
        }
        
        .btn {
            min-height: 6rem;
            font-size: 1.75rem;
            max-width: 700px;
        }
    }
    
    /* ========== ORIENTACIÓN LANDSCAPE ========== */
    /* Landscape en móviles y tablets */
    @media (max-height: 600px) and (orientation: landscape) {
        body {
            overflow-y: auto;
        }
        
        h1 {
            font-size: clamp(1.5rem, 6vh, 2.5rem);
            margin-bottom: clamp(0.5rem, 2vh, 1rem);
        }
        
        h2 {
            font-size: clamp(1rem, 4vh, 1.5rem);
            margin-bottom: clamp(0.75rem, 3vh, 1.25rem);
        }
        
        .btn {
            min-height: clamp(2.5rem, 10vh, 3.5rem);
            font-size: clamp(0.875rem, 3vh, 1.125rem);
        }
        
        .container {
            padding-block: clamp(0.5rem, 2vh, 1rem);
        }
    }
    
    /* Landscape específico para móviles pequeños */
    @media (max-width: 767px) and (max-height: 500px) and (orientation: landscape) {
        h1 {
            font-size: clamp(1.25rem, 5vh, 2rem);
        }
        
        h2 {
            font-size: clamp(0.875rem, 3vh, 1.25rem);
        }
        
        .btn {
            min-height: clamp(2.25rem, 8vh, 3rem);
            padding: clamp(0.5rem, 2vh, 0.875rem) clamp(1rem, 3vw, 1.5rem);
        }
    }
    
    /* ========== PANTALLAS ULTRA GRANDES ========== */
    @media (min-width: 1920px) {
        .container {
            max-width: 1600px;
        }
        
        h1 {
            font-size: 5rem;
        }
        
        h2 {
            font-size: 2.75rem;
        }
        
        .btn {
            min-height: 5rem;
            font-size: 1.5rem;
            max-width: 500px;
        }
    }
    
    /* ========== PANTALLAS ULTRA PEQUEÑAS ========== */
    @media (max-width: 320px) {
        .container {
            padding-inline: 0.75rem;
        }
        
        h1 {
            font-size: clamp(1.25rem, 12vw, 1.75rem);
        }
        
        h2 {
            font-size: clamp(0.875rem, 6vw, 1.125rem);
        }
        
        .btn {
            min-height: 2.75rem;
            font-size: clamp(0.75rem, 5vw, 0.875rem);
            padding: 0.625rem 1rem;
        }
    }
    
    /* ========== ACCESIBILIDAD RESPONSIVE ========== */
    /* Mejoras para usuarios con preferencias de movimiento reducido */
    @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
            scroll-behavior: auto !important;
        }
    }
    
    /* Modo de alto contraste */
    @media (prefers-contrast: high) {
        h1, h2 {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 1);
        }
        
        .btn {
            border: 2px solid currentColor;
        }
    }
    
    /* Preferencia por esquemas de color oscuro */
    @media (prefers-color-scheme: dark) {
        body {
            background: 
                radial-gradient(ellipse at top, rgba(0, 255, 136, 0.08) 0%, transparent 50%),
                linear-gradient(135deg, #000000 0%, #0a0a0a 50%, #000000 100%);
        }
    }
</style>